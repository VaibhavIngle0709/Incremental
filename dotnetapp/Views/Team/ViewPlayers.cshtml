@using dotnetapp.Models
@model ViewModel
<p background='res/bg.jpg'>
<style>
    th
    {
        color:white;
    }
    td
    {
      color:white;  
    }
</style>


<div style="width:100% ;background-color:red ;text-align:center; padding:10px;">
    <h4 style="color:white;">PLAYERS OF TEAM @Model.TeamName</h3>
</div>
<div style="width:100%">

<table class="table" style="text-align: start;background-color:#333;">
    <thead>
        <th>PLAYER ID</th>
        <th>NAME</th>
        <th>CATEGORY</th>
        <th>BIDDING AMOUNT</th>
    </thead>
    <tbody >
        @foreach (var data in @Model.p)
        {
            <tr>
                <td>@data.Id</td>
                <td>@data.Name</td>
                <td>@data.Category</td>
                <td>@data.BiddingAmount</td>
            </tr>    
        }
        
    </tbody>

</table>
</div>
<a href='@Url.Action("TeamIndex", "Team")'><input type="submit" class="form-control" value="RETURN TO LIST" style="color:white;background-color:#000; margin: 15px; padding:10px; font-size:15px"></a>




</p>